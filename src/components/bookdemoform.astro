---
import Button from "./ui/button.astro";
---

<form
        method="POST"
        id="form"
        class="needs-validation contact-form"
        data-astro-reload
        novalidate>
    <input type="checkbox" class="hidden" style="display:none" name="botcheck" />

    <div class="mb-5">
        <input
                type="text"
                placeholder="Full Name *"
                name="name"
                required
                class="w-full px-4 py-3 border placeholder:text-slate-400 rounded-md outline-none focus:ring-4 border-slate-300 focus:border-slate-600 ring-slate-100"
        />
        <div class="empty-feedback text-red-400 text-sm mt-1 hidden">Please enter your first name.</div>
    </div>

    <div class="mb-5">
        <input
                type="email"
                placeholder="Company Email *"
                name="email"
                required
                class="w-full px-4 py-3 border placeholder:text-slate-400 rounded-md outline-none focus:ring-4 border-slate-300 focus:border-slate-600 ring-slate-100"
        />
        <div class="empty-feedback text-red-400 text-sm mt-1 hidden">Please enter your email.</div>
        <div class="invalid-feedback text-red-400 text-sm mt-1 hidden">Please enter a valid email address.</div>
    </div>

    <div class="mb-5">
        <input
                type="text"
                placeholder="Job Title *"
                name="message"
                required
                class="w-full px-4 py-3 border placeholder:text-slate-400 rounded-md outline-none focus:ring-4 border-slate-300 focus:border-slate-600 ring-slate-100"
        />
        <div class="empty-feedback text-red-400 text-sm mt-1 hidden">Please enter your job title.</div>
    </div>

    <button type="submit"
            class="submit-button w-full text-white border-none rounded mt-2 px-2 py-3 text-base font-medium cursor-pointer transition-all duration-200"
            style="background-color: #00897B;"
            onmouseover="this.style.backgroundColor='#00695C'"
            onmouseout="this.style.backgroundColor='#00897B'"
            id="submitButton">
        <span id="buttonText">Book Your 1:1 Demo</span>
        <span class="spinner hidden inline-block w-4 h-4 border-2 border-white border-t-transparent rounded-full animate-spin ml-2" id="spinner"></span>
    </button>

    <div id="result" class="mt-3 text-center"></div>
</form>

<script is:inline src="/contact-form.js" defer></script>