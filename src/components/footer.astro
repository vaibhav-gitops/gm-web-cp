---
import Container from "@components/container.astro";
import { Icon } from "astro-icon/components";
import "@fontsource/nunito/700.css";
import LogoImg from "../assets/bg-removed-logo.png";
import { Picture } from "astro:assets";

const { margin } = Astro.props;

const footermenu = {
  company: [
    {
      title: "Contact Us",
      path: "/contact",
    },
  ],
  product: [
    {
      title: "FAQs",
      path: "/faq",
    },
    {
      title: "Documentation",
      path: "/docs/overview",
    },
    {
      title: "Download Trial",
      path: "/download",
    },
    {
      title: "Pricing",
      path: "/pricing",
    },
  ],
};
---

<footer class:list={["py-14 bg-black border-t border-custom-gray", margin]}>
  <Container>
    <div class="grid sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-8">
      <div class="sm:col-span-2 md:col-span-3 lg:col-span-2">
        <a href="/" class="text-lg flex items-center">
          <Picture
              src={LogoImg}
              alt="GitmoxiLogo"
              formats={["avif", "webp"]}
              loading="lazy"
              class="h-10 w-auto mr-1"
          />
          <span
              class="pt-2 font-bold text-white"
              style="font-size: 1.6rem; font-weight: 700; font-family: 'Nunito', Arial, sans-serif;"
          >
            Gitmoxi
          </span>
        </a>

        <div class="flex pl-9 gap-3 mt-4 items-center">
          <a
              href="https://www.linkedin.com/company/gitmoxi"
              target="_blank"
              rel="noopener noreferrer"
              class="bg-white/10 hover:bg-white/20 rounded w-6 h-6 inline-flex items-center justify-center text-white/70"
          >
            <Icon name="simple-icons:linkedin" class="w-4 h-4" />
            <span class="sr-only">LinkedIn</span>
          </a>

          <a
              href="https://www.youtube.com/@gitmoxi"
              target="_blank"
              rel="noopener noreferrer"
              class="bg-white/10 hover:bg-white/20 rounded w-6 h-6 inline-flex items-center justify-center text-white/70"
          >
            <Icon name="simple-icons:youtube" class="w-5 h-5" />
            <span class="sr-only">YouTube</span>
          </a>
        </div>
      </div>

      <div>
        <h3 class="font-medium text-sm text-white">Product</h3>
        <div class="flex flex-col mt-3">
          {footermenu.product.map((item) => (
              <a
                  href={item.path || "#"}
                  class="py-2 text-sm text-slate-400 hover:text-white transition-colors"
              >
                {item.title}
              </a>
          ))}
        </div>
      </div>

      <div>
        <h3 class="font-medium text-sm text-white">Company</h3>
        <div class="flex flex-col mt-3">
          {footermenu.company.map((item) => (
              <a
                  href={item.path || "#"}
                  class="py-2 text-sm text-slate-400 hover:text-white transition-colors"
              >
                {item.title}
              </a>
          ))}
        </div>
      </div>
    </div>
  </Container>

  <div class="pt-10 px-5">
    <Container>
      <p class="text-sm text-slate-500 [text-wrap:balance]">
        Copyright Â© {new Date().getFullYear()} SKAI Software Corporation. All rights reserved.
      </p>
    </Container>
  </div>
</footer>
