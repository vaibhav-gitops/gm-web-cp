---
import { Icon } from "astro-icon/components";

const features = [
  {
    icon: "lucide:git-branch",
    title: "GitOps Native",
    description: "Every deployment is a git commit. Full version control and traceability for all changes.",
    color: "text-blue-400"
  },
  {
    icon: "lucide:shield",
    title: "Self-Hosted Security",
    description: "Complete control over your deployment pipeline. No third-party access to your AWS accounts.",
    color: "text-green-400"
  },
  {
    icon: "lucide:zap",
    title: "Blue/Green Simplified",
    description: "Elegant blue/green deployments for ECS, Fargate, Lambda, and EKS with intelligent traffic shifting.",
    color: "text-yellow-400"
  },
  {
    icon: "lucide:settings",
    title: "Infrastructure Integration",
    description: "Works seamlessly with Terraform and CDK while keeping application assets separate.",
    color: "text-purple-400"
  },
  {
    icon: "lucide:check-circle",
    title: "Comprehensive Monitoring",
    description: "Detailed insights from orchestrators, container logs, and alerts. Debug deployments with ease.",
    color: "text-emerald-400"
  },
  {
    icon: "lucide:dollar-sign",
    title: "Simple Pricing",
    description: "One-time license purchase. Unlimited apps, unlimited clusters. No usage-based metering.",
    color: "text-orange-400"
  }
];
---

<section class="py-20 px-6 bg-black text-white">
  <div class="max-w-7xl mx-auto">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold mb-6">
        Why Choose Gitmoxi?
      </h2>
      <p class="text-xl text-slate-300 max-w-3xl mx-auto">
        Built for teams who need reliable, secure, and cost-effective deployment solutions.
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
      {features.map((feature, index) => (
          <div
              key={index}
              class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-xl hover:bg-white/10 transition-all duration-300 group p-8"
          >
            <div class="flex items-center mb-4">
              <Icon
                  name={feature.icon}
                  class={`w-10 h-10 ${feature.color} group-hover:scale-110 transition-transform`}
              />
            </div>
            <h3 class="text-xl font-bold mb-3">{feature.title}</h3>
            <p class="text-slate-300 leading-relaxed">
              {feature.description}
            </p>
          </div>
      ))}
    </div>
  </div>
</section>
