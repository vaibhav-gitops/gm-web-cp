---
import Container from "@components/container.astro";
import Link from "@components/ui/link.astro";
import Dropdown from "./dropdown.astro";
import { StickyHeader, Astronav, MenuItems, MenuIcon } from "astro-navbar";
import "@fontsource/nunito/500.css";

const menuitems = [
  {
    title: "FAQs",
    path: "/faq",
  },
  {
    title: "Documentation",
    path: "/docs/overview",
  },
  {
    title: "Pricing",
    path: "/pricing",
  },
  {
    title: "Contact",
    path: "/contact",
  },
];
---

<StickyHeader
    class="sticky top-0 border-b z-10 transition-all bg-custom-blue"
    scrollY={50}
    defaultClass="py-3 border-custom-gray"
    activeClass="py-2 border-custom-gray backdrop-blur-lg"
>
  <Container>
    <div
        class="flex flex-col lg:flex-row justify-between items-center relative z-10"
        transition:animate="none">
      <Astronav>
        <a href="/" class="flex w-full lg:w-auto items-center justify-between">
          <img
              src="../../src/assets/bg-removed-logo.png" alt="Gitmoxi Logo" class="h-10 w-auto mr-2"/>
          <span class="font-bold text-white" style="font-size: 1.6rem; font-weight: 500; font-family: 'Nunito', Arial, sans-serif;">Gitmoxi</span>
        </a>
        <MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0">
          <ul class="flex flex-col lg:flex-row lg:gap-3">
            {
              menuitems.map((item, index) => (
                  <>
                    {item.children && (
                        <Dropdown
                            title={item.title}
                            children={item.children}
                            lastItem={index === menuitems.length - 1}
                        />
                    )}

                    {!item.children && (
                        <li>
                          <a
                              href={item.path}
                              class="flex lg:px-3 py-2 text-custom-light-gray hover:text-custom-gray focus-visible:ring-2 focus-visible:ring-offset-2 transition focus-visible:ring-gray-300 focus-visible:outline-none focus-visible:shadow-outline-gray rounded-full"
                              style="font-size: 1rem">
                            {item.title}
                          </a>
                        </li>
                    )}
                  </>
              ))
            }
          </ul>
        </MenuItems>
      </Astronav>
      <div>
        <div class="hidden lg:flex items-center gap-4">
          <Link
              href="/docs/getting_started"
              size="sm"
              class="inline-flex items-center group gap-px bg-custom-green hover:bg-teal-400 transition-colors">
            <span class="text-white">Try Now for Free</span>
            <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 20 20"
                fill="currentColor"
                class="w-4 h-4 mt-px group-hover:translate-x-1 transition-transform">
              <path
                  fill-rule="evenodd"
                  d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z"
                  clip-rule="evenodd"></path>
            </svg>
          </Link>
        </div>
      </div>
    </div>
  </Container>
</StickyHeader>
