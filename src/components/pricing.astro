---
import { Icon } from "astro-icon/components";
import Link from "@components/ui/link.astro";

interface Props {
    plan: Plan;
    }

const { plan } = Astro.props;

const colors = {
    teal: "text-teal-600 mb-4",
    orange: "text-teal-900 mb-4",
    };
type Color = keyof typeof colors;
export type Plan = {
    name: string;
    price: string | null;
    desc: string;
    color: Color;
    popular: boolean;
    features: string[];
    button: {
    text: string;
    link: string;
    };
    };

function getDiscountedPrice(price: string) {
    return "10,000"
}
---
<div>
  <div
      class:list={[
        "flex flex-col w-full order-first lg:order-none border border-dark-blue py-5 px-6 relative rounded-lg",
        plan.popular
            ? "  border-custom-blue shadow-lg"
            : " border-custom-blue shadow-lg",
      ]}>
    <!--{-->
    <!--  plan.popular && (-->
    <!--    <span class="inline-flex absolute px-3 py-1 text-xs -top-3 left-1/2 -translate-x-1/2 font-medium rounded-full bg-gradient-to-r from-red-500 to-orange-500 text-white ">-->
    <!--      Popular-->
    <!--    </span>-->
    <!--  )-->
    <!--}-->

    <div class="">
      <h3 class:list={[colors[plan.color] || "text-neutral-800"]}>
        {plan.name}
      </h3>

      <p class="mt-2 text-custom-blue">
        {
          plan.price ? (
              <div class="relative inline-block">
                <!-- Discount Label -->
                <span class="absolute -top-2 left-0 text-sm font-semibold text-orange-700">
          33% OFF
        </span>

        <!-- Price Section -->
        <span class="flex items-baseline gap-3 flex-wrap">
          <span class="relative text-xl md:text-2xl text-font-primary before:absolute before:left-0 before:right-0 before:top-1/2 before:h-[2px] before:bg-orange-700 before:content-['']">
            ${plan.price}
          </span>
          <span class="font-bold text-2xl text-font-primary md:text-4xl">
            ${getDiscountedPrice(plan.price)}
          </span>
          <span class="-mt-4 text-md text-font-primary md:text-md text-gray-700">
            per installation
          </span>
        </span>
              </div>
          ) : (
              <span class="font-bold text-2xl md:text-4xl">Free</span>
          )
        }
      </p>

      <!--<p class="mt-3 ml-1 text-sm text-neutral-500">{plan.desc}</p>-->
    </div>

    <div class="h-56 mt-2">
      <ul class="grid mt-8 text-left gap-y-4">
        {
          plan.features.map((item) => (
              <li class="flex items-center gap-3 text-neutral-800">
                <Icon name="ph:check-circle-fill" class="w-5 h-5" />
                <span class="text-sm">{item}</span>
              </li>
          ))
        }
      </ul>
    </div>

    <div class="flex mt-8">
      <Link
          href={plan.button.link || "#"}
          block
          style={plan.popular ? "primary" : "outline"}>
        {plan.button.text || "Get Started"}
      </Link>
    </div>
  </div>
</div>
